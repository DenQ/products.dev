<!doctype html>
<html ng-app="myApp">
<head>
    <script src="https://code.angularjs.org/1.3.9/angular.min.js"></script>
    <script type="text/javascript" src="/bundles/acmeproduct/js/index.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

    {#<link rel="stylesheet" href="http://netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css">#}
</head>
<body>

<div class="panel panel-default" ng-controller="ListController">
    <div class="panel-heading">Product list</div>
    <table class="table">
        <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Description</th>
            <th>System</th>
        </tr>
        <tr ng-repeat="product in products">
            <td>[[product.photo]]</td>
            <td>[[product.title]]</td>
            <td>[[product.description]]</td>
            <td>
                <button type="button" class="btn btn-default" aria-label="Left Align" title="edit product">
                    <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-default" aria-label="Left Align" title="remove product" ng-click="removeProduct(product.id)">
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </button>
            </td>
        </tr>
    </table>
</div>

</body>
</html>